    <div data-controller="mobile-nav" data-mobile-nav-target="menu" class="sm:hidden hidden px-4 pt-2 pb-4 space-y-2 bg-gray-100 z-40">
        <%= link_to 'Shop', root_path, class: 'block text-gray-700 hover:bg-gray-200 px-3 py-2 rounded-md text-base font-medium' %>

        <% if current_user %>
        <%= link_to "My Orders", orders_path, class: 'block text-gray-700 hover:bg-gray-200 px-3 py-2 rounded-md text-base font-medium' %>
        <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "block w-full text-left px-3 py-2 hover:bg-gray-200 text-base font-medium", form: { "data-turbo-confirm": "Are you sure you want to logout?" } %>
        <% else %>
        <%= link_to "Sign In", new_user_session_path, class: 'block text-gray-700 hover:bg-gray-200 px-3 py-2 rounded-md text-base font-medium' %>
        <%= link_to "Sign Up", new_user_registration_path, class: 'block text-gray-700 hover:bg-gray-200 px-3 py-2 rounded-md text-base font-medium' %>
        <% end %>

        <%= link_to cart_path, class: "block px-3 py-2 text-gray-700 hover:bg-gray-200 text-base font-medium" do %>🛒 Cart<% end %>
    </div>
</nav>