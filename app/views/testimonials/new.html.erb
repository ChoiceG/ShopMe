<div class="max-w-lg mx-auto mt-10 bg-gray-100 p-6 rounded-lg shadow">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">Share Your Experience</h2>

    <%= form_with model: @testimonial, local: true do |f| %>
    <div class="mb-4">
        <%= f.label :name, class: "block font-semibold" %>
        <%= f.text_field :name, class: "w-full mt-1 p-2 border border-gray-300 rounded" %>
    </div>

    <div class="mb-4">
        <%= f.label :content, "Your Testimonial", class: "block font-semibold" %>
        <%= f.text_area :content, rows: 4, class: "w-full mt-1 p-2 border border-gray-300 rounded" %>
    </div>

    <%= f.submit "Submit Testimonial", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
    <% end %>
</div>