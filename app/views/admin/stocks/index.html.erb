<% content_for :title, "Stocks" %>

<div class="w-full">
    <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
    <% end %>

    <div class="flex justify-between items-center">
        <h1 class="font-bold text-4xl">Stocks</h1>
        <%= link_to "New stock", new_admin_product_stock_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    </div><br>

    <div id="admin_stocks" class="min-w-full overflow-x-auto">
        <% if @admin_stocks.any? %>
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Quantity
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Size
                    </th>
                    <th scope="col" class="relative px-6 py-3">
                        <span class="sr-only">Actions</span>
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                <% @admin_stocks.each do |stock| %>
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <%= stock.amount %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <%= stock.size %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <div class="flex space-x-2 justify-end">
                            <%= link_to "Show", admin_product_stock_path(@product.id, stock.id), class: "rounded-md px-3.5 py-2.5 bg-green-100 hover:bg-gray-50 inline-block font-medium" %>
                            <%= link_to "Edit", edit_admin_product_stock_path(@product.id, stock.id), class: "rounded-md px-3.5 py-2.5 bg-yellow-100 hover:bg-gray-50 inline-block font-medium" %>
                            <div class="inline-block">
                                <%= button_to "Destroy", admin_product_stock_path(@product.id, stock.id), method: :delete, class: "rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
                            </div>
                        </div>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
        <% else %>
        <p class="text-center my-10">No stocks found.</p>
        <% end %>
    </div>
</div>