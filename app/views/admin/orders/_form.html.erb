<%= form_with(model: admin_order, url: admin_order.persisted? ? admin_order_path(admin_order) : admin_orders_path, method: admin_order.persisted? ? :patch : :post, class: "contents") do |form| %>
<% if admin_order.errors.any? %>
<div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
    <h2><%= pluralize(admin_order.errors.count, "error") %> prohibited this admin_order from being saved:</h2>

    <ul class="list-disc ml-6">
        <% admin_order.errors.each do |error| %>
        <li><%= error.full_message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="my-5">
    <%= form.label :customer_email %>
    <%= form.text_field :customer_email, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": admin_order.errors[:customer_email].none?, "border-red-400 focus:outline-red-600": admin_order.errors[:customer_email].any?}] %>
</div>

<div class="my-5">
    <%= form.check_box :fulfilled, class: "mr-2 leading-tight", checked: @admin_order.fulfilled %>
    <%= form.label :fulfilled, "Fulfilled", class: "text-gray-700 text-sm font-bold" %>
</div>

<div class="my-5">
    <%= form.label :total %>
    <%= form.number_field :total, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": admin_order.errors[:total].none?, "border-red-400 focus:outline-red-600": admin_order.errors[:total].any?}] %>
</div>

<div class="my-5">
    <%= form.label :address %>
    <%= form.text_field :address, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": admin_order.errors[:address].none?, "border-red-400 focus:outline-red-600": admin_order.errors[:address].any?}] %>
</div>

<div class="mt-5">
    <h3>Order Products</h3>
    <div id="order-products-fields">
        <%= form.fields_for :order_products do |order_product_form| %>
        <div class="nested-fields">
            <div class="my-2">
                <%= order_product_form.label :product_id, "Product" %>
                <%= order_product_form.collection_select :product_id, Product.all, :id, :name, { prompt: "Select a Product" }, class: 'block shadow-sm rounded-md border px-3 py-2 mt-2 w-full' %>
            </div>
            <div class="my-2">
                <%= order_product_form.label :quantity %>
                <%= order_product_form.number_field :quantity, class: 'block shadow-sm rounded-md border px-3 py-2 mt-2 w-full' %>
            </div>
            <%# Add a link to remove this product if it's an existing order %>
            <% if admin_order.persisted? %>
            <%= order_product_form.hidden_field :_destroy %>
            <%= link_to "Remove", '#', class: "remove_nested_fields text-red-600 hover:text-red-800" %>
            <% end %>
        </div>
        <% end %>
    </div>
    <%= link_to_add_association 'Add Product', form, :order_products, data: { 'association-insertion-method': 'append', 'association-insertion-node': '#order-products-fields' } %>
</div>

<div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
</div>
<% end %>