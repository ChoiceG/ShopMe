<div class="nested-fields">
    <div class="my-2">
        <%= f.label :product_id, "Product" %>
        <%= f.collection_select :product_id, Product.all, :id, :name, { prompt: "Select a Product" }, class: 'block shadow-sm rounded-md border px-3 py-2 mt-2 w-full' %>
    </div>
    <div class="my-2">
        <%= f.label :quantity %>
        <%= f.number_field :quantity, class: 'block shadow-sm rounded-md border px-3 py-2 mt-2 w-full' %>
    </div>
    <% if @admin_order.persisted? %>
    <%= f.hidden_field :_destroy %>
    <%= link_to "Remove", '#', class: "remove_nested_fields text-red-600 hover:text-red-800" %>
    <% end %>
</div>