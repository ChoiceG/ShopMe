<% content_for :title, "Showing Category" %>

<div class="md:w-2/3 w-full">
    <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
    <% end %>

    <h1 class="font-bold text-4xl">Showing Category</h1><br>

    <div class="bg-white p-4 border border-gray-300 rounded-lg shadow-md">
        <strong class="block font-medium text-lg">Name:</strong>
        <p class="text-gray-700"><%= @admin_category.name %></p>
    </div>

    <div class="bg-white p-4 border border-gray-300 rounded-lg shadow-md">
        <strong class="block font-medium text-lg">Description:</strong>
        <p class="text-gray-700"><%= @admin_category.description %></p>
    </div>

    <% if @admin_category.image.attached? %>
    <div class="mb-4">
        <strong class="block font-medium text-lg">Category Image:</strong>
        <%= image_tag @admin_category.image.variant(resize_to_limit: [100, 100]).processed, alt: "Category Image", class: "w-32 h-32 object-cover" %>
    </div>
    <% else %>
    <p>No category image available.</p>
    <% end %>

    <%= link_to "Edit this category", edit_admin_category_path(@admin_category), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    <%= link_to "Back to categories", admin_categories_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>

    <div class="sm:inline-block mt-2 sm:mt-0 sm:ml-2">
        <%= button_to "Destroy this category", admin_category_path(@admin_category), method: :delete, class: "w-full rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
    </div>
</div>