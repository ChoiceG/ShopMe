<%= content_for :title, "Categories" %>

<div class="w-full">
    <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
    <% end %>

    <div class="flex justify-between items-center mb-4">
        <h1 class="font-bold text-4xl">Categories</h1>
        <%= link_to "New category", new_admin_category_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    </div>


    <%
=begin%>
    <div class="flex flex-col w-full h-full">
        <!-- Container for table -->
        <div class="overflow-x-auto w-full">
            <div class="py-2 inline-block w-full">
                <!-- Table -->
                <div class="overflow-x-auto w-full">
                    <table class="min-w-full table-auto">
                        <!-- Table Header -->
                        <thead class="bg-white border-b">
                            <tr>
                                <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
                                    Name
                                </th>
                                <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
                                    Description
                                </th>
                            </tr>
                        </thead>
                        <!-- Table Body -->
                        <tbody>
                            <% @admin_categories.each do |c| %>
                            <tr class="bg-gray-50 border-b">
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800 underline">
                                    <%= link_to c.name, edit_admin_category_path(c) %>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800 underline">
                                    <%= link_to c.description %>
                                </td>
                            </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <%
=end%>


    <div id="admin_categories" class="w-full">
        <% if @admin_categories.any? %>
        <% @admin_categories.each do |category| %>
        <div id="<%= dom_id(category) %>" class="w-full sm:w-auto my-5 space-y-5">
            <!-- Category content -->
            <div class="bg-white p-4 border border-gray-300 rounded-lg shadow-md">
                <!-- Name -->
                <strong class="block font-medium mb-2 text-lg">Name:</strong>
                <p class="text-gray-700"><%= category.name %></p>
            </div>

            <div class="bg-white p-4 border border-gray-300 rounded-lg shadow-md">
                <!-- Description -->
                <strong class="block font-medium mb-2 text-lg">Description:</strong>
                <p class="text-gray-700"><%= category.description %></p>
            </div>

            <!-- Action Buttons -->
            <div class="w-full sm:w-auto flex space-x-4">
                <%= link_to "Show", admin_category_path(category), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
                <%= link_to "Edit", edit_admin_category_path(category), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
                <%= button_to "Destroy", admin_category_path(category), method: :delete, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-red-600 hover:bg-red-500 font-medium", data: { turbo_confirm: "Are you sure?" } %>
            </div>
        </div>
        <% end %>
        <% else %>
        <p class="text-center my-10">No categories found.</p>
        <% end %>
    </div>
</div>