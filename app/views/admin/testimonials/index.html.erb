<!-- app/views/admin/testimonials/index.html.erb -->

<div class="min-h-screen bg-gray-100 py-8">
    <div class="container mx-auto px-4">
        <h1 class="text-4xl font-bold text-center text-gray-900 mb-8">Testimonials</h1>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
            <% @testimonials.each do |testimonial| %>
            <div class="bg-white p-6 rounded-lg shadow-lg">
                <p class="text-gray-700 mb-4"><%= testimonial.content %></p>

                <% if testimonial.approved? %>
                <span class="text-green-500 font-semibold">Approved</span>
                <% else %>
                <%= link_to 'Approve', approve_admin_testimonial_path(testimonial), method: :patch, class: 'text-blue-500 hover:text-blue-700' %>
                <% end %>
            </div>
            <% end %>
        </div>
    </div>
</div>